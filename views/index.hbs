<h1 align="center">{{title}}</h1>
<p align="center">Welcome to {{title}}</p>

<a href="/new" class="btn btn-success float-right">Add a new message!</a>
<br>
<br>

<table class="table table-hover">
  {{#each messages}}
    <tr class="table-dark">
      <th class="text-light" style="width: 10%" scope="row">{{user}}</th>
      <td>
        <p>{{text}}</p>
        <small class="text-muted">Sent on: {{added}}</small>
      </td>
    </tr>
  {{/each}}

</table>